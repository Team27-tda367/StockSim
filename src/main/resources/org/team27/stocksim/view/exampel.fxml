<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.team27.stocksim.controller.Controller"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../css/main.css"
            >

    <children>

        <Label layoutX="14.0" layoutY="14.0" text="Stocksim" />

        <Button layoutX="14.0" layoutY="50.0" text="Call model" onAction="#handleSampleAction" />

        <Label fx:id="outputLabel" layoutX="14.0" layoutY="90.0" text="" />

        <!-- Create new Stock -->
        <TextField fx:id="inputSymbol" layoutX="14.0" layoutY="130.0" prefWidth="200.0" />
        <TextField fx:id="inputStockName" layoutX="14.0" layoutY="160.0" prefWidth="200.0" />
        <TextField fx:id="inputTickSize" layoutX="14.0" layoutY="190.0" prefWidth="30.0" />
        <TextField fx:id="inputLotSize" layoutX="14.0" layoutY="220.0" prefWidth="30.0" />

        <!-- Submit Button -->
        <Button layoutX="220.0" layoutY="160.0" text="Submit"
                onAction="#createStock" />

        <!-- Label to show submitted stock-values -->
        <Label fx:id="createdStockLabel" layoutX="50.0" layoutY="210.0" text="" />

    </children>

</AnchorPane>