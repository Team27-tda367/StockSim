<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml" fx:controller="org.team27.stocksim.ui.fx.viewControllers.StockViewController" prefHeight="800.0" prefWidth="1400.0" stylesheets="@../css/main.css">

    <!-- Navigation bar -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header-bar, spacing-large">
            <Label text="StonkSim" styleClass="logo"/>
            <Button text="Home" styleClass="btn-ghost" onAction="#onExample"/>
            <Button text="Portfolio" styleClass="btn-ghost"/>
            <Region HBox.hgrow="ALWAYS"/>
            <VBox alignment="CENTER_RIGHT" styleClass="spacing-small">
                <Label text="Available Balance" styleClass="text-small, text-muted"/>
            </VBox>
        </HBox>
    </top>

    <!-- Stock Info Card -->
    <center>
        <HBox alignment="TOP_LEFT">
            <padding>
                <Insets top="30" left="30" bottom="30"/>
            </padding>

            <BorderPane prefWidth="980" style="-fx-background-color: #F9FAFB;
                               -fx-padding: 24px;
                               -fx-background-radius: 12px;
                               -fx-border-radius: 12px;
                               -fx-border-color: #E5E7EB;
                               -fx-border-width: 1px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.07), 12, 0.3, 0, 2);">

                <!-- Top-left content -->
                <left>
                    <VBox spacing="8" alignment="TOP_LEFT">
                        <Label text="AAPL" style="-fx-font-size: 32px;
                                      -fx-font-weight: 600;
                                      -fx-font-family: 'Inter', 'Arial';
                                      -fx-text-fill: #111827;" />

                        <Label text="Apple · Inc. · Listed on Stock Exchange" style="-fx-font-size: 15px;
                                      -fx-text-fill: #6B7280;
                                      -fx-font-family: 'Inter', 'Arial';" />

                        <!-- Badges -->
                        <HBox spacing="6">
                            <Label text="Technology" style="-fx-background-color: #DBEAFE;
                                          -fx-text-fill: #2563EB;
                                          -fx-padding: 4 12;
                                          -fx-background-radius: 14px;
                                          -fx-font-size: 13px;
                                          -fx-font-family: 'Inter';
                                          -fx-font-weight: 500;" />

                            <Label text="Growth" style="-fx-background-color: #DCFCE7;
                                          -fx-text-fill: #16A34A;
                                          -fx-padding: 4 12;
                                          -fx-background-radius: 14px;
                                          -fx-font-size: 13px;
                                          -fx-font-family: 'Inter';
                                          -fx-font-weight: 500;" />
                        </HBox>
                    </VBox>
                </left>

                <!-- Favorite Icon -->
                <right>
                    <Button fx:id="favoriteButton" styleClass="clickable" style="-fx-background-color: transparent;
                   -fx-border-color: #D1D5DB;
                   -fx-border-width: 1px;
                   -fx-border-radius: 16px;
                   -fx-background-radius: 16px;
                   -fx-padding: 6 10;
                   -fx-cursor: hand;" onAction="#onToggleFavorite">

                        <graphic>
                            <Label fx:id="favoriteIcon" text="☆" styleClass="icon-large" style="-fx-font-size: 18px;
                          -fx-text-fill: #4B5563;" />
                        </graphic>

                    </Button>
                </right>



            </BorderPane>
        </HBox>
    </center>

</BorderPane>
